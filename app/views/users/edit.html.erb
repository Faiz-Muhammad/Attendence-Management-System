<% if @user.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@user.errors.count, "error") %>
            prohibited this <%= @user.class %> from being saved:
          </h2>
          <div class="panel-body">
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="container" style="padding-top: 60px;">
    <h1 class="page-header">Edit Profile</h1>
    <div class="row">
      <!-- left column -->
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="text-center">
          <%= image_tag @user.image.url(:medium), class: "avatar img-circle img-thumbnail" %>
          <h6>Upload a different photo...</h6>
          <%= f.file_field :image %>
        </div>
      </div>
      <!-- edit form column -->
      <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
        <h3>Personal info</h3>
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
              <%= f.text_field :name, autofocus: true, autocomplete: 'name', placeholder: "Ahmad Bilal", class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Phone Number:</label>
            <div class="col-lg-8">
              <%= f.text_field :phonenumber, autofocus: true, autocomplete: 'phonenumber', placeholder: "923xxxxxxxxx", class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Role:</label>
            <div class="col-lg-8">
              <%= f.text_field :role, autofocus: true, autocomplete: 'role', placeholder: "ROR Developer", class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>
          </div>
           <div class="form-group">
            <label class="col-md-3 control-label">Password:</label>
            <div class="col-md-8">
              <%= f.password_field :password, class: 'form-control', include_blank: true %>

              <small class="form-text text-muted"><%= ('leave_blank_if_you_don_t_want_to_change_it') %></small>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Confirm Password:</label>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, class: 'form-control'  %>
            </div>
          </div>
          <!-- <div class="form-group">
            <label class="col-md-3 control-label">Current password:</label>
            <div class="col-md-8">
              <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

              <small class="form-text text-muted"><%= ('.we_need_your_current_password_to_confirm_your_changes') %></small>
            </div>
          </div> -->
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <%= f.submit ('Update'), class: 'btn btn-primary' %>
              <span></span>
              <%= link_to ('Back'), :back, class: 'btn btn-primary' %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
