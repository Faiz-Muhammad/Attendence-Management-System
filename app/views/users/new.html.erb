<% if @user.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@user.errors.count, "error") %>
            prohibited this <%= @user.class %> from being saved:
          </h2>
          <div class="panel-body">
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'Name', placeholder: "Ahmad Bilal", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phonenumber %>
    <%= f.text_field :phonenumber, autofocus: true, autocomplete: 'phonenumber', placeholder: "923xxxxxxxxx", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :role %>
    <%= f.text_field :role, autofocus: true, autocomplete: 'role', placeholder: "ROR Developer", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: "name@example.com", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit ("Create"), class: 'btn btn-primary btn-xlarge' %>
  </div>
<% end %>
