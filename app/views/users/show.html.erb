<div class="container-fluid well span6">
  <div align="center">
    <div class="row-fluid">
      <div class="span2" >
        <%= image_tag @user.image.url(:medium), class:"avatar img-circle img-thumbnail" %>
      </div>
      <div class="span8">
        <h3>Name: <%= @user.name %></h3>
        <h6>Email: <%= @user.email %></h6>
        <h6>Phone Number: <%= @user.phonenumber %></h6>
        <h6>Role: <%= @user.role %></h6>
      </div>
      <div class="span2">
        <div class="btn btn-primary btn-xlarge">
            <%= link_to "Edit your profile", edit_user_path(@user), id: 'edit_link' %>
        </div>
      </div>
      <div class="btn btn-primary btn-xlarge pull-right">
        <%= link_to "Back", :back , id: 'edit_link' %>
      </div>
    </div>
  </div>
</div>
